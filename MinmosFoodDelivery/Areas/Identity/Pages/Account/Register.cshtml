@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/identity.css" />
</head>

<h1 class="title">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="sub-title">Create a new account.</h4>
            @*<hr />*@
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group login-email">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control rounded-pill border-0 box-shadow-rounded font-weight-bold" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group login-password">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control rounded-pill border-0 box-shadow-rounded font-weight-bold" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group login-re-password">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill border-0 box-shadow-rounded font-weight-bold" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group login-button">
                <button type="submit" class="btn btn-primary rounded-pill box-shadow-rounded">Register</button>
            </div>
        </form>
    </div>
